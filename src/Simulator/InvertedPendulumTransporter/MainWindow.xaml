                            <Label Content="Parametrization of X"></Label>
                            <TextBox Name="XParametrizationTextBox" Text="{Binding Path=XParametrization, Mode=TwoWay}" Margin="20,0,20,0"></TextBox>
                            <Label Content="Parametrization of Y"></Label>
                            <TextBox Name="YParametrizationTextBox" Text="{Binding Path=YParametrization}" Margin="20,0,20,0"></TextBox>
                            <Label Content="Parametrization of Z"></Label>
                            <TextBox Name="ZParametrizationTextBox" Text="{Binding Path=ZParametrization}" Margin="20,0,20,0"></TextBox>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="C-S-Frame" Name="CSFrameTabItem">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="2,5,0,0">
                                <Label Content="Curvature"></Label>
                                <TextBox Name="CurvatureParametrizationTextBox" Text="{Binding Path=CurvatureParametrization, Mode=TwoWay}" Width="140" Margin="0"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="2,5,0,0">
                                <Label Content="Skewness"></Label>
                                <TextBox Name="SkewnessParametrizationTextBox" Text="{Binding Path=SkewnessParametrization}" Width="140" Margin="0"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="35,0,0,0">
                                <Label Content="X0"></Label>
                                <TextBox Name="StartPointXTextBox" Text="{Binding Path=FrameStartPointX}" Width="40" Margin="5"></TextBox>
                                <TextBox Name="StartPointYTextBox" Text="{Binding Path=FrameStartPointY}" Width="40" Margin="5"></TextBox>
                                <TextBox Name="StartPointZTextBox" Text="{Binding Path=FrameStartPointZ}" Width="40" Margin="5"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
                                <Label Content="Tangent"></Label>
                                <TextBox Name="TangentVectorXTextBox" Text="{Binding Path=FrameTangentVectorX}" Width="40" Margin="5"></TextBox>
                                <TextBox Name="TangentVectorYTextBox" Text="{Binding Path=FrameTangentVectorY}" Width="40" Margin="5"></TextBox>
                                <TextBox Name="TangentVectorZTextBox" Text="{Binding Path=FrameTangentVectorZ}" Width="40" Margin="5"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="8,0,0,0">
                                <Label Content="Normal"></Label>
                                <TextBox Name="NormalVectorXTextBox" Text="{Binding Path=FrameNormalVectorX}" Width="40" Margin="5"></TextBox>
                                <TextBox Name="NormalVectorYTextBox" Text="{Binding Path=FrameNormalVectorY}" Width="40" Margin="5"></TextBox>
                                <TextBox Name="NormalVectorZTextBox" Text="{Binding Path=FrameNormalVectorZ}" Width="40" Margin="5"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Binormal"></Label>
                                <TextBox Name="BinromalVectorXTextBox" Text="{Binding Path=FrameBinormalVectorX}" Width="40" Margin="5"></TextBox>
                                <TextBox Name="BinromalVectorYTextBox" Text="{Binding Path=FrameBinormalVectorY}" Width="40" Margin="5"></TextBox>
                                <TextBox Name="BinormalVectorZTextBox" Text="{Binding Path=FrameBinormalVectorZ}" Width="40" Margin="5"></TextBox>
                            </StackPanel>
                        </StackPanel>
                    </TabItem>
                </TabControl>-->
                <!--<Label Content="Minimum parameter value"></Label>
                <TextBox Name="MinParameterValueTextBox" Text="{Binding Path=MinParameterValue}" Width="50" Margin="20,0,20,0" HorizontalAlignment="Left"></TextBox>
                <Label Content="Maximum parameter value"></Label>
                <TextBox Name="MaxParameterValueTextBox" Text="{Binding Path=MaxParameterValue}" Width="50" Margin="20,0,20,0" HorizontalAlignment="Left"></TextBox>
                <Label Content="Curve Segments Count"></Label>
                <TextBox Name="CurveSegmentsCount" Text="{Binding Path=SegmentsCount}" Width="50" Margin="20,0,20,10" HorizontalAlignment="Left"></TextBox>
                --><!--<Button Name="LoadCurveButton" Margin="20,0,20,0" Content="Load Curve" Width="100" Height="30" Click="LoadCurveButton_Click"></Button>--><!--
                <Label Content="Display"></Label>-->
                <!--<CheckBox Name="WindCheckBox" Content="Wind Enabled" Margin="20,0,20,5" IsChecked="{Binding Path=WindEnabled}"></CheckBox>-->
                <!--<CheckBox Foreground="Green" Name="TangentPlaneCheckBox" Content="Tangent" Margin="20,0,20,5" IsChecked="{Binding Path=TangentPlaneSelected}"></CheckBox>
                <CheckBox Foreground="Cyan" Name="NormalPlaneCheckBox" Content="Normal" Margin="20,0,20,5" IsChecked="{Binding Path=NormalPlaneSelected}"></CheckBox>
                <CheckBox Foreground="Red" Name="BinormalPlaneCheckBox" Content="Binormal" Margin="20,0,20,5" IsChecked="{Binding Path=BinormalPlaneSelected}"></CheckBox>
                <CheckBox Name="SkewnessInterpretationCheckBox" Content="Skewness Interpretation" Margin="20,0,20,5" IsChecked="{Binding Path=SkewnessInterpretationSelected}"></CheckBox>-->
            </StackPanel>
        </Grid>
        <Grid Grid.Column ="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <h:HelixViewport3D  Name="SimulationScene" ShowFrameRate="True" Grid.Column="1" BorderBrush="Black" BorderThickness="2">
                <h:DefaultLights/>
                <!--<h:LinesVisual3D Points="{Binding Path=CurvePoints}" Thickness="2" Color="Blue">
                </h:LinesVisual3D>
                <h:CubeVisual3D x:Name="FrameStartCube" Visible="False"/>
                <h:CombinedManipulator x:Name="FrameStartManipulator" TargetTransform="{Binding Transform, ElementName=FrameStartCube}"/>-->
            </h:HelixViewport3D>
            <!--<Button x:Name="LoadFrameButton" Content="Apply Changes" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="100" Height="30" Click="LoadFrameButton_Click"/>
            <Button x:Name="ResetFrameButton" Content="Reset Changes" Grid.Column="1" HorizontalAlignment="Left" Margin="120,0,0,10" VerticalAlignment="Bottom" Width="100" Height="30" Click="ResetFrameButton_Click"/>-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <oxy:Plot Title="Error" TitleFontSize="12" BorderBrush="Black" BorderThickness="2">
                        <oxy:Plot.Series>
                            <oxy:LineSeries ItemsSource="{Binding ErrorPointsX}"/>
                            <oxy:LineSeries ItemsSource="{Binding ErrorPointsY}"/>
                        </oxy:Plot.Series>
                    </oxy:Plot>
                </Grid>
                <Grid Grid.Column="1">
                    <oxy:Plot Title="Voltage" TitleFontSize="12" BorderBrush="Black" BorderThickness="2">
                        <oxy:Plot.Series>
                            <oxy:LineSeries ItemsSource="{Binding VoltagePointsX}"/>
                            <oxy:LineSeries ItemsSource="{Binding VoltagePointsY}"/>
                        </oxy:Plot.Series>
                    </oxy:Plot>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
