<UserControl x:Class="InvertedPendulumTransporter.Controls.SceneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvertedPendulumTransporter"
             xmlns:h="http://helix-toolkit.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="428" d:DesignWidth="594">
    <Grid>
        <h:HelixViewport3D Name="SimulationScene" ShowFrameRate="True" ShowCoordinateSystem="True" BorderBrush="Black" Panel.ZIndex="1" BorderThickness="2" Camera="{h:PerspectiveCamera 10,10,10}">
            <h:DefaultLights/>
        </h:HelixViewport3D>
        <h:HelixViewport3D CameraMode="FixedPosition" Name="WindDirectionScene" ShowViewCube="False" BorderBrush="Black" BorderThickness="0" Panel.ZIndex="2" Margin="10,10,434,268" Camera="{h:PerspectiveCamera 10,10,10}">
            <h:DefaultLights></h:DefaultLights>
            <h:ArrowVisual3D Fill="Red" Visible="False" x:Name="WindArrow"></h:ArrowVisual3D>
        </h:HelixViewport3D>
    </Grid>
</UserControl>
